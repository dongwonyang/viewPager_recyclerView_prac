<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/tv_survey_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Q1. 나는 ~~~"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="5dp"/>
    <RadioGroup
        android:id="@+id/rg_survey_question_option_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_survey_question">

        <RadioButton
            android:id="@+id/rb_survey_question_option1"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="####한다"/>

        <RadioButton
            android:id="@+id/rb_survey_question_option2"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$$한다."/>
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>